generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // URL do banco de dados PostgreSQL
}

model Invoice {
  id                         Int      @id @default(autoincrement())
  customerNumber             String
  referenceMonth             DateTime
  electricEnergyQuantity     Float
  electricEnergyValue        Float
  sceeeEnergyQuantity        Float
  sceeeEnergyValue           Float
  compensatedEnergyQuantity  Float
  compensatedEnergyValue     Float
  publicLightingContribution Float
  filePath                   String

  // Calculated fields
  totalEnergyConsumptionKWh Float @default(0) // Calculated: electricEnergyQuantity + sceeeEnergyQuantity
  totalValueWithoutGD       Float @default(0) // Calculated: electricEnergyValue + sceeeEnergyValue + publicLightingContribution

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
